            <dd> <%= result[0].tech %></dd>
        </dl>
        <p><%= result[0].body[0].children[0].text %></p>
        
    <figure>
        <% result[0].url.forEach((image, index, arr) => { %>
        <img src="<%= image%>" alt="<%= result[0].alt[index]%>">
        <% }); %>   
    </figure>
